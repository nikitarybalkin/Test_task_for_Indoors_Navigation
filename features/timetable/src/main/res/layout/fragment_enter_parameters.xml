<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.EnterParametersFragment">

    <TextView
        android:id="@+id/tv_timetable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/timetable_for"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cities"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_timetable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <EditText
                android:id="@+id/ed_city_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/from_where"
                android:background="@null"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_turn_over"
                app:layout_constraintTop_toTopOf="parent"
                />
            <View
                android:id="@+id/v_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_turn_over"
                />
            <EditText
                android:id="@+id/ed_city_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/to_where"
                android:background="@null"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_turn_over"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/iv_turn_over"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/turn_over"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_parameters"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_cities"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <View
                android:id="@+id/iv_background1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.36"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tv_today"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/today"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/sf_pro_display_semibold"
                app:layout_constraintStart_toStartOf="@id/iv_background1"
                app:layout_constraintEnd_toEndOf="@id/iv_background1"
                />
            <View
                android:id="@+id/iv_background2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.32"
                app:layout_constraintStart_toEndOf="@id/iv_background1"
                app:layout_constraintEnd_toStartOf="@id/iv_background3"
                />
            <TextView
                android:id="@+id/tv_tomorrow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tomorrow"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/sf_pro_display_semibold"
                app:layout_constraintStart_toStartOf="@id/iv_background2"
                app:layout_constraintEnd_toEndOf="@id/iv_background2"
                />
            <View
                android:id="@+id/iv_background3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.32"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/date"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/sf_pro_display_semibold"
                app:layout_constraintStart_toStartOf="@id/iv_background3"
                app:layout_constraintEnd_toEndOf="@id/iv_background3"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_kind_of_transport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_parameters"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_any"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/grey"
            >
            <TextView
                android:id="@+id/tv_any"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/any"
                android:textColor="@color/black"
                android:gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_plane"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/grey"
            android:layout_marginStart="8dp"
            >
            <ImageView
                android:id="@+id/iv_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plane"
                android:layout_marginVertical="4dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_train"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/grey"
            android:layout_marginStart="8dp"
            >
            <ImageView
                android:id="@+id/iv_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/train"
                android:layout_marginVertical="4dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_suburban"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/grey"
            android:layout_marginStart="8dp"
            >
            <ImageView
                android:id="@+id/iv_suburban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/electro_train"
                android:layout_marginVertical="4dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_bus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/grey"
            android:layout_marginStart="8dp"
            >
            <ImageView
                android:id="@+id/iv_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bus"
                android:layout_marginVertical="4dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/b_find"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/find"
        android:backgroundTint="@color/yellow"
        app:cornerRadius="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_kind_of_transport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>