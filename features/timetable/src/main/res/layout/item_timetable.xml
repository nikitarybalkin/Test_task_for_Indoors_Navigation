<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_from_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <TextView
        android:id="@+id/tv_perevozchik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/grey"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_from_to"
        app:layout_constraintEnd_toEndOf="@id/tv_from_to"
        app:layout_constraintTop_toBottomOf="@id/tv_from_to"
        />

    <TextView
        android:id="@+id/tv_name_of_transport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/grey"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_from_to"
        app:layout_constraintEnd_toEndOf="@id/tv_from_to"
        app:layout_constraintTop_toBottomOf="@id/tv_perevozchik"
        />

    <TextView
        android:id="@+id/day_of_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_from_to"
        app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
        android:id="@+id/tv_time_of_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/day_of_departure"
        app:layout_constraintStart_toStartOf="@id/day_of_departure"
        />

    <TextView
        android:id="@+id/tv_place_of_departure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="90dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_time_of_departure"
        app:layout_constraintTop_toBottomOf="@id/tv_time_of_departure"
        />



    <TextView
        android:id="@+id/day_of_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_time_of_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/day_of_arrival"
        app:layout_constraintStart_toStartOf="@id/day_of_arrival"
        />

    <TextView
        android:id="@+id/tv_place_of_arrival"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="90dp"
        android:layout_marginTop="16dp"
        android:translationZ="1dp"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_time_of_arrival"
        app:layout_constraintTop_toBottomOf="@id/tv_time_of_arrival"
        />
    <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toStartOf="@id/tv_time_of_arrival"
        app:layout_constraintStart_toEndOf="@id/tv_time_of_departure"
        app:layout_constraintTop_toTopOf="@id/tv_time_of_arrival" />


</androidx.constraintlayout.widget.ConstraintLayout>